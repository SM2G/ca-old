<p id="notice"><%= notice %></p>

<h1>Sessions</h1>

<table class="table table-striped table-hover ">
  <thead>
    <tr>
      <th>Session id</th>
      <th>Nom</th>
      <th>Status</th>
      <th>Profil</th>
      <th colspan="6"></th>
    </tr>
  </thead>

  <tbody>
    <% @sessions.each do |session| %>
      <tr>
        <td><%= session.id %></td>
        <td><%= session.result %></td>
        <td><%= link_to 'Show', session , :class => "btn btn-default" %></td>
        <td><%= link_to 'Edit', edit_session_path(session) , :class => "btn btn-default" %></td>
        <td><%= link_to 'Destroy', session, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

