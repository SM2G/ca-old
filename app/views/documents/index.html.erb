<h1>Modèles de Documents</h1>

<table class="table table-striped table-hover ">
  <thead>
    <tr>
      <th>Document</th>
      <th class="text-warning">Alerte</th>
      <th class="text-danger">Critique</th>
      <th class="text-muted">Expiration</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @documents.each do |document| %>
      <tr>
        <td><%= document.document_name %></td>
        <td class="text-warning"> <%= document.warning_days %> jours </td>
        <td class="text-danger"> <%= document.critical_days %> jours </td>
        <td class="text-muted"> <%= document.expire_days %> jours </td>
        <td><%= link_to 'Détails', document , :class => "btn btn-default" %></td>
        <td><%= link_to 'Modifier', edit_document_path(document) , :class => "btn btn-default" %></td>
        <td><%= link_to 'Supprimer', document, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= link_to 'Nouveau modèle de Document', new_document_path, :class=>"btn btn-primary" %>
