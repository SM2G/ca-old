        <li class="<%= 'active' if current_page?(profiles_path) %>"><%= link_to "Profils", profiles_path %></li>
        <li class="<%= 'active' if current_page?(documents_path) %>"><%= link_to "Documents", documents_path %></li>
      </ul>
      </ul>

      <ul class="nav navbar-nav navbar-right">
        <li class="divider"></li>
          <% if logged_in? %>
          <li><%= link_to current_user.username, current_user %></li>

        <li class="divider"></li>
        <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown">
            <b class="caret"></b></a>
            <ul class="dropdown-menu">
              <li><%= link_to "Mon compte", :action => 'admin' %></li>
              <li class="divider"></li>
              <li><%= link_to("Déconnexion", :action => 'logout') %></li>
            </ul>
          </li>
          <% else %>
          <li><%= link_to "Connexion", login_path %></li>
          <% end %>
        </ul>
    </div><!--/.nav-collapse -->
  </div>
</div>

<div class="container">
</br>
</br>
</br>

