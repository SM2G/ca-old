<h1>Profils</h1>

<table class="table table-striped table-hover ">
  <thead>
    <tr>
      <th>Nom du Profil</th>
      <th>Nb personnel</th>
      <th>Documents</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @profiles.each do |profile| %>
      <tr>
        <td><%= profile.profile_name %></td>
        <td><%= profile.employees.count %></td>
        <td><b>Contient  <%= pluralize(profile.document_ids.count, "document") %> : </b>
        <ul>
          <% profile.documents.each do |d| %>
          <li><%= d.document_name %></li>
          <%end%>
        </ul>
        </td>
        <td><%= link_to 'DÃ©tails', profile, :class => "btn btn-default" %></td>
        <td><%= link_to 'Modifier', edit_profile_path(profile), :class => "btn btn-default" %></td>
        <td><%= link_to 'Supprimer', profile, method: :delete, data: { confirm: 'Are you sure?' } , :class => "btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

