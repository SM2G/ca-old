<div class="row">
  <div class="col-xs-12">
    <h1>Profils</h1>

    <%= link_to 'Nouveau Profil', new_profile_path, class: "btn btn-primary" %>

    <table class="table table-striped table-hover ">
      <thead>
        <tr>
          <th>Nom du Profil</th>
          <th>Nb personnel</th>
          <th>Documents</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @profiles.each do |profile| %>
          <tr>
            <td><%= profile.name %></td>
            <td><%= profile.employees.count %></td>
            <td><b>Contient  <%= pluralize(profile.document_ids.count, "document") %> : </b>
            <ul>
              <% profile.documents.each do |document| %>
                <li><%= document.name %></li>
              <%end%>
            </ul>
            </td>
            <td><%= link_to 'Détails', profile, class: "btn btn-default" %></td>
            <td><%= link_to 'Modifier', edit_profile_path(profile), class: "btn btn-default" %></td>
            <td><%= link_to 'Supprimer', profile, method: :delete, data: { confirm: 'Etes-vous sûr ?' } , class: "btn btn-danger" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <%= link_to 'Nouveau Profil', new_profile_path, class: "btn btn-primary" %>
  </div>
</div>
