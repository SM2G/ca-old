<%= form_for(@employee) do |f| %>
  <% if @employee.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@employee.errors.count, "error") %> prohibited this employee from being saved:</h2>
      <ul>
        <% @employee.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>


<div class="row">
  <div class="col-lg-6">
    <div class="well bs-component">
    <form class="form-horizontal">  
    <fieldset>
    <legend>Fiche employé de <%= @employee.first_name %> <%= @employee.last_name %></legend>
    <div class="form-group">
      <div class='row'>
      <label for="inputEmail" class="col-md-4 control-label">Prénom</label>
      <div class="col-md-8">
        <%= f.text_field :first_name, :class => "form-control input-sm", :placeholder => "Prénom", :type => "text" %>
      </div>
    </div>
  </br>
    <div class='row'>
      <label for="inputEmail" class="col-md-4 control-label">Nom</label>
      <div class="col-md-8">
      <%= f.text_field :last_name, :class => "form-control input-sm", :placeholder => "Nom", :type => "text" %>
      </div>
    </div>
  </div>
    <div class='row'>
      <label for="inputEmail" class="col-md-4 control-label">Date de naissance</label>
      <div class="col-md-8">
      <%= f.date_select :birthdate %>
      </div>
    </div>

    <div class='row'>
      <label class="col-lg-4 control-label">Employé actif</label>
      <div class="col-lg-8">
        <div class="radio">
          <label>
          <%= f.check_box :is_active %>
          </label>
        </div>
      </div>
    </div>
    <div class='row'>
      <label for="select" class="col-lg-4 control-label">Profil</label>
      <div class="col-lg-8">
        <%= collection_select :employee, :profile_id, Profile.all, :id, :full_profile_naming, prompt: true, :class => "form-control"  %>
      </div>
    </div>
    <div class="form-group">
      <div class="col-lg-8 col-lg-offset-4">
        <button type="reset" class="btn btn-default">Cancel</button>
          <%= f.submit "Valider", :class => "btn btn-primary" %>
      </div>
    </div>
  </fieldset>
</form>
    </div>
    </div>
    </div>

<% end %>
