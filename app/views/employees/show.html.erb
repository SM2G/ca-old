<div class="row">
  <div class="col-xs-12 col-md-9">
    <h1><%= @employee.full_name %></h1>
  </div>
</div>
<div class="row">
  <div class="col-xs-12">
    <strong>Statut :</strong>
    <span class="<%= @employee.is_active ? "text-success" : "text-danger"%>">
      <%= @employee.is_active ? "Employé actif" : "Employé inactif"%>
    </span></br>
    <strong>Profil :</strong> <%= @employee.profile.name %>

    <h2>Documents</h2>
    <table class="table table-striped table-hover ">
      <thead>
        <tr>
          <th>Nom du document</th>
          <th>Date d'expiration</th>
        </tr>
      </thead>
      <tbody>
        <% @employee.papers.each do |paper| %>
        <tr>
          <td> <%= link_to paper.document.name, edit_paper_path(paper) %></td>
          <td> <p class="<%= paper_status_css_class(paper) %>"><%= l(paper.expiration_date) %> </p></td>
        </tr>
        <% end %>
      </tbody>
    </table>

    <%= link_to 'Retour Liste', employees_path , class: "btn btn-default" %>
    <%= link_to 'Modifier', edit_employee_path(@employee) , class: "btn btn-primary"%>
    <%= link_to "Supprimer", @employee, method: :delete, data: { confirm: 'Etes-vous sûr ?' }, class: "btn btn-danger" %>
  </div>
</div>
