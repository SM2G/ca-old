<p id="notice"><%= notice %></p>

<h1>Liste des documents</h1>
Cette page liste tous les documents dont la validité va bientôt expirer ou qui sont déjà expirés.
</br>

<table class="table table-striped table-hover ">
  <thead>
    <tr>
      <th>Document</th>
      <th>Employé</th>
      <th>Statut</th>
      <th>Expiration date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @papers.order(:document_id, :expiration_date).each do |paper| %>
      <tr>
        <td><%= paper.document.document_name %></td>
        <td><%= link_to paper.employee.last_name+" "+paper.employee.first_name , paper.employee %></td>
        <td>
          <p class="<%= paper.expiration_date < paper.document.warning_days ? "text-success" : "text-danger" %>">
          <%= paper.expiration_date %>
        </p></td>
        <td><%= time_ago_in_words(paper.expiration_date) %> (<%= paper.expiration_date %>) </td>
        <td><%= link_to 'Edit', edit_paper_path(paper), :class => "btn btn-default" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

